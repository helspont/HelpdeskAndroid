<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/realtivLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/frag_series"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/username"
            class="cz.fel.cvut.helpdeskclient.ListFrag" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/username"
            android:layout_alignParentLeft="true"
            android:background="#17a2d1"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="205dp"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/frag_series"
            android:layout_alignParentLeft="true"
            android:background="#17a2d1"
            android:orientation="horizontal"
            android:padding="3dp" >
        </LinearLayout>

        <Button
            android:id="@+id/newTicket"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/nice5"
            android:text="New Ticket" />

        <TextView
            android:id="@+id/username"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="User name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <fragment
        android:id="@+id/frag_capt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout2"
        class="cz.fel.cvut.helpdeskclient.DetailFrag" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout2"
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/realtivLayout1"
        android:background="#17a2d1"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>